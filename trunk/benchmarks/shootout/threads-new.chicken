(declare (uses srfi-18) (block) (fixnum) (unsafe))

(define n (string->number (:optional (command-line-arguments) "1000")))

(define (link n)
  ;(print "link " n)
  (let ([msg 0])
    (when (> (sub1 n) 0)
      (set! msg (thread-join! (thread-start! (cut link (sub1 n)))) ))
    (add1 msg) ) )

(print (thread-join! (thread-start! (cut link n))))
